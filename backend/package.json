{
  "name": "@counters/backend",
  "version": "0.0.1",
  "main": "src/server.js",
  "scripts": {
    "build": "webpack --mode production",
    "prod": "npm run serve",
    "serve": "NODE_ENV=production node dist/bundle.js",
    "dev": "npm run cleandb && concurrently -k \"npm run startdb\" \"npm run compile:watch\" \"sleep 10 && npm run start\"",
    "compile:watch": "webpack --mode development --watch",
    "start": "nodemon --inspect -r source-map-support/register dist/bundle.js",
    "startdb": "docker run --name counters-db -p 5432:5432 -e POSTGRES_PASSWORD=postgres postgres",
    "cleandb": "docker stop counters-db || true && docker rm counters-db || true",
    "prepush": "npm test",
    "precommit": "lint-staged",
    "test": "jest src/",
    "test:watch": "jest src/ --watch"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-graphql": "^0.6.11",
    "glob-require-dir": "^1.0.3",
    "graphql": "^0.13.1",
    "pg": "^7.4.3",
    "ramda": "^0.25.0",
    "source-map-support": "^0.5.6",
    "sqlstring": "^2.3.1",
    "squel": "^5.12.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.42",
    "babel-core": "7.0.0-bridge.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.42",
    "@babel/preset-env": "^7.0.0-beta.42",
    "@babel/cli": "^7.0.0-beta.42",
    "babel-loader": "8.0.0-beta.0",
    "concurrently": "^3.5.1",
    "nodemon": "^1.10.0",
    "webpack": "4.0.1",
    "webpack-cli": "^2.0.6"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "expect"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  }
}
